@model IEnumerable<QuanLyNhanSu.Models.ChucVuNhanVien>

@{
    ViewBag.Title = "Phụ cấp chức vụ";
}

<div class="">
    <div class="">
        <h1 class="page-header">
            Cập nhật phụ cấp
        </h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <i class="fas fa-fw fa-tachometer-alt"></i> <a href="@Url.Action("index","Admin")">Tổng quan</a>
            </li>
            <li class="breadcrumb-item">
                <i class="fa fa-sitemap"></i><a href="@Url.Action("index","QuanLyPhongBan")">Phòng ban</a>
            </li>
            <li class="breadcrumb-item">
                <i class="fa fa-money-bill"></i>Cập nhật phụ cấp
            </li>
        </ol>
    </div>
</div>
<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr class="success">
                        <th>
                            Tên chức vụ
                        </th>
                        <th>
                            Hệ số phụ cấp
                        </th>
                        <th>Thực hiện</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {

                        <tr>

                            @using (Html.BeginForm("CapNhatPhuCap", "QuanLyPhongBan", new { @id = item.MaChucVuNV }))
                            {
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenChucVu)
                                </td>
                                <td>
                                    @*@Html.TextBox("HSPC", item.HSPC, new {Title = "định dạng giá trị vd:0,45", placeholder = "vd: 0,45", })*@

                                    <input name="HSPC" value="@item.HSPC" title="định dạng giá trị vd 0,45" placeholder="vd: 0,45" />

                                </td>
                                <td>
                                    <input class="btn btn-primary" type="submit" value="Lưu lại" />

                                </td>
                            }
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
