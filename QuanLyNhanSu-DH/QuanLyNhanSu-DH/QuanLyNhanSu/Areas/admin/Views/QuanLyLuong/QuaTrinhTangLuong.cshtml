@model IEnumerable<QuanLyNhanSu.Models.CapNhatLuong>

@{
    ViewBag.Title = "Quá trình";
}

<div class="">
    <div class="">
        <h1 class="page-header">
            Cập nhật bảng lương nhân viên
        </h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <i class="fa fa-tachometer-alt"></i> <a href="@Url.Action("index","Admin")">Tổng quan</a>
            </li>
            <li class="breadcrumb-item">
                <i class="fa fa-money-bill"></i><a href="@Url.Action("index","QuanLyLuong")">Lương</a>
            </li>
            <li class="breadcrumb-item">
                <i class="fa fa-money-bill"></i> Quá trình lương
            </li>
        </ol>
    </div>
</div>
<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr class="success">
                        <th>
                            Mã nhân viên
                        </th>
                        <th>
                            Lương trước khi cập nhật
                        </th>
                        <th>
                            Lương sau khi cập nhật
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.BHXH)
                        </th>
                        <th>
                            Hệ số lương
                        </th>
                        <th>
                            Thuế thu nhập
                        </th>
                        <th>
                            Ngày áp dụng
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Luong.MaNhanVien)
                            </td>
                            <td>
                                @string.Format("{0:#,#}", @item.LuongHienTai).Replace(",", ",")
                            </td>
                            <td>
                                @string.Format("{0:#,#}", @item.LuongSauCapNhat).Replace(",", ",")

                            </td>
                            <td>
                                @*@string.Format("{0:#,#}", @item.BHXH).Replace(",", ",")*@
                                <table class="table table-bordered">
                                    <tr><th>XH</th><th>YT</th><th>TN</th></tr>
                                    <tr>
                                        <td>@item.BHXH</td>
                                        <td>@item.BHYT</td>
                                        <td>@item.BHTN</td>
                                    </tr>
                                </table>
                            </td>
                            <td>
                                @item.HeSoLuong
                                @*@string.Format("{0:#,#}", @item.PhuCap).Replace(",", ",")*@
                            </td>
                            <td>
                                @string.Format("{0:#,#}", @item.ThueThuNhap).Replace(",", ",")
                            </td>
                            <td>
                                @String.Format("{0:dd/MM/yyyy}", @item.NgayCapNhat)
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
        </div>
    </div>
