@{
    ViewBag.Title = "Lương nhân viên";
}

@using QuanLyNhanSu.Models
@model List<Luong>

<div class="container-fluid">
    <div class="">
        <div class="">
            <h1 class="page-header">
                Lương nhân viên
            </h1>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <i class="fa fa-tachometer-alt"></i> <a href="@Url.Action("index","Admin")">Tổng quan</a>
                </li>
                <li class="breadcrumb-item">
                    <i class="fa fa-money-bill"></i> Lương
                </li>
            </ol>
        </div>
    </div>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <a class="btn btn-primary" href="@Url.Action("DanhSachNhanLuong", "QuanLyLuong")">Danh sách nhận lương</a>
            <a class="btn btn-primary" href="@Url.Action("ThanhToanLuong", "QuanLyLuong")">Tính lương</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr class="success">
                            <th>Mã nhân viên</th>
                            <th>Lương tối thiểu</th>
                            <th>Hệ số lương</th>
                            <th>Phụ cấp CV</th>
                            <th>Tiền bảo hiểm</th>
                            <th>Thuế (%)</th>
                            <th>Số bảng lương: @Model.Count</th>

                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var item in Model)
                            {

                                <tr>
                                    <td>@item.MaNhanVien</td>
                                    <td>
                                        @string.Format("{0:#,#}", @item.LuongToiThieu).Replace(",", ",")
                                    </td>
                                    <td>
                                        @item.HeSoLuong
                                    </td>
                                    <td>
                                        @item.PhuCap
                                    </td>
                                    <td>
                                        <table class="table table-bordered">
                                            <tr><th>XH</th><th>YT</th><th>TN</th></tr>
                                            <tr>
                                                <td>@item.BHXH</td>
                                                <td>@item.BHYT</td>
                                                <td>@item.BHTN</td>
                                            </tr>
                                        </table>

                                    </td>
                                    <td>
                                        @string.Format("{0:#,#}", @item.ThueThuNhap).Replace(",", ",")
                                    </td>
                                    <td>
                                        <a class="btn btn-warning" href="@Url.Action("SuaBangLuong", "QuanLyLuong", new { @id = @item.MaNhanVien })"><i class="fa fa-pencil-alt x5" aria-hidden="true"></i>&nbsp;Sửa</a>
                                        <a class="btn btn-info" href="@Url.Action("ThanhToanMotNhanVien", "QuanLyLuong", new { @id = @item.MaNhanVien })">Tính lương</a>
                                        <a class="btn btn-primary" href="@Url.Action("QuaTrinhTangLuong", "QuanLyLuong", new  {@id = @item.MaNhanVien })">Quá trình lương</a>

                                    </td>
                                </tr>

                            }

                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
